@model CreateProductModel
<h1>Create New Product</h1>

<form class="row g-3" method="post" enctype="multipart/form-data" asp-action="Create">
    @* <div asp-validation-summary="All"></div> *@

    <div class="col-md-12">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name">
        <span asp-validation-for=Name class="form-text text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" min="0" step="0.01" type="number" class="form-control" placeholder="Enter product price">
        <span asp-validation-for=Price class="form-text text-danger"></span>
    </div>  
    <div class="col-md-4">
        <label asp-for="Discount" class="form-label">Discount</label>
        <input asp-for="Discount" value="0" min="0" max="100" type="number" class="form-control" placeholder="Enter product discount">
        <span asp-validation-for=Discount class="form-text text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Quantity" class=" form-label">Quantity</label>
        <input asp-for="Quantity" value="1" min="0" step="1" type="number" class="form-control" placeholder="Enter product quantity">
        <span asp-validation-for=Quantity class="form-text text-danger"></span>
    </div>

    @* <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label">Category ID</label>
        <input asp-for="CategoryId" type="number" class="form-control" placeholder="Enter product category id">
    </div> *@

    <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option disabled selected>Choose product category...</option>
        </select>
        <span asp-validation-for=CategoryId class="form-text text-danger"></span>
    </div>

    @* <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="url" class="form-control" placeholder="Enter product image url">
        <span asp-validation-for=ImageUrl class="form-text text-danger"></span>
    </div> *@
    <div class="col-md-6">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter product image url">
        <span asp-validation-for=Image class="form-text text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
        <span asp-validation-for=Description class="form-text text-danger"></span>
    </div>

    <div class="col-6">
        <a asp-action="Index" type="button" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-primary w-100">Create</button>
    </div>
</form>